<!-- app/views/lists/show.html.erb -->

<h1><%= @list.name %></h1>

<% @movies.each do |movie| %>
  <div class="movie">
    <h2><%= movie.title %></h2>
    <p><%= image_tag movie.poster_url if movie.poster_url.present? %></p>
    <p><%= movie.overview %></p>
    <p><%= movie.rating %></p>
  </div>
<% end %>

<p><%= link_to 'Voltar para todas as listas', lists_path %></p>
